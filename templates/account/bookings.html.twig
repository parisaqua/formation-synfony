{% extends 'base.html.twig' %}

{% block title %}Liste de vos réservations{% endblock %}

{% block body %}

    <div class="container">
        <h1>Mes réservations</h1>
        <div class="alert alert-info mt-3">
            <h5>Retrouvez ci-dessous toutes vos réservations passées et à venir</h5>
        </div>

        {% for booking in app.user.bookings %}
            {% set ad = booking.ad %}
            <div class="row mt-5">
                <div class="col-4">
                    <img src="{{ad.coverImage}}" alt="Photo de l'annonce {{ad.title}}" class="img-fluid">
                </div>
                <div class="col-8">
                    <h4>{{ad.title}}</h4>
                    <p>
                        Réservation <strong>n°{{booking.id}}</strong><br>
                        Du {{booking.startDate|date('d/m/Y')}} au {{booking.endDate|date('d/m/Y')}} ({{booking.amount}} &euro;)
                    </p>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}" class="btn btn-info">Plus d'information</a>
                </div>
            </div>
        {% endfor %}

    </div>

{% endblock %}
