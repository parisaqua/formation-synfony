{% extends 'base.html.twig' %}

{% block title %}Conexion au site{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3 clearfix">
                <h1>Connexion</h1>

                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue, l'email ou le mot de passe est invalide</div>
                {% endif %}

                <form action="{{ path('account_login') }}" method="post">
                    <div class="from-group">
                        <label for='email' class="h4 mt-2">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email ..." required value="{{username}}">
                    </div>
                    <div class="form-group">
                        <label for='password' class="h4 mt-3">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe ..." required>
                    </div>
                    <div class="form-grou">
                        <button type="submit" class="btn btn-success mt-2 float-right"><i class="fas fa-check"></i> Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
